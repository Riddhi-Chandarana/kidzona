<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riddhi.first.Main5Activity"
    android:background="@drawable/xyz">


    <TextView
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx4"
        android:textSize="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx2"
        android:textSize="100dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignTop="@+id/tx5"
        android:layout_alignEnd="@+id/tx4"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx5"
        android:textSize="100dp"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_above="@+id/home"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:id="@+id/tx1"
        android:textSize="100dp"
        android:layout_marginStart="15dp"
        android:textColor="@android:color/holo_purple"
        android:layout_below="@+id/tx4"
        android:layout_toEndOf="@+id/tx5"
        android:layout_marginTop="21dp" />

    <TextView
        android:text="E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx3"
        android:textSize="100dp"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/holo_green_light"
        android:layout_marginTop="14dp"
        android:layout_alignTop="@+id/tx1"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/home"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
