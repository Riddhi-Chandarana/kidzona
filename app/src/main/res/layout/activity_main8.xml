<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riddhi.first.Main8Activity"
    android:background="@drawable/xyz">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        app:srcCompat="@drawable/pink"
        android:id="@+id/pink"
        android:background="@android:color/transparent"
        android:layout_above="@+id/home"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/red" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/red"
        android:id="@+id/red"
        android:background="@android:color/transparent"
        android:layout_above="@+id/pink"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow"
        android:id="@+id/yellow"
        android:background="@android:color/transparent"
        android:layout_above="@+id/home"
        android:layout_alignStart="@+id/red"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/home"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        app:srcCompat="@drawable/brown1"
        android:id="@+id/brown"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/red"
        android:layout_toEndOf="@+id/home" />

</RelativeLayout>
